#!/usr/bin/env bash
# Script to ping an IP address and display the results

if [[ $# -eq 0 ]]; then
    echo "Usage: $(basename "$0") {IP_ADDRESS}"
    exit 1
fi

ip_address=$1

# Ping the IP address 5 times and capture the output
ping_output=$(ping -c 5 "$ip_address")

# Print the captured output
echo "$ping_output" | sed 's/^\(PING.*\)$/\1\n/' | sed 's/^\(---.*---\)$/\1\n/'
